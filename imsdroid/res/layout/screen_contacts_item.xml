  android:layout_height="wrap_content" android:layout_width="fill_parent">
<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_48" android:id="@+id/screen_contacts_item_imageView_avatar"></ImageView>
